<Page x:Class="WpfApp1p.view.pageAuth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1p.view"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="pageAuth"
      Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Login" Grid.Column="1" Grid.Row="1"/>
        <Label Content="Password" Grid.Column="1" Grid.Row="2"/>
        <TextBox x:Name="loginTb" Grid.Column="2" Grid.Row="1"/>
        <TextBox x:Name="passwordTb" Grid.Column="2" Grid.Row="2"/>
        <Button Content="Войти" x:Name="signBt" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="2" Click="signBt_Click"/>
    </Grid>
</Page>
